                  <div class="form-group">
                    <label class="col-sm-3 control-label text-right">Perut</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="stomach" placeholder="Enter perut">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-20">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label">Kandungan</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="contents" placeholder="Enter kandungan">
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label text-right">Kemaluan</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="genitals" placeholder="Enter kemaluan">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-20">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label">Height</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="height " placeholder="Enter height">
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label text-right">Weight</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="weight " placeholder="Enter weight">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-20">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label">BMI(Body mass index)</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="bmi " placeholder="Enter BMI">
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                  <div class="form-group">
                    <label class="col-sm-3 control-label text-right">BP(Blood pressure)</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" name="bp " placeholder="Enter BP">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-20">
                <div class="col-sm-6 pr-20">
                  <%= submit_tag "Next", class: 'btn ra-100 btn-primary btn-sm' %>
                </div>
              </div>
          <% end %>
          </div>
         </div>
      </div>
    </div>
