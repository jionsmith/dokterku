<%= form_for @institution, html: { class: 'form-horizontal bordered-row' } do |f| %>
  <% if @institution.errors.any? %>
    <div class="alert alert-close alert-danger">
      <%= link_to '', '#', title: 'Close', class: 'glyph-icon alert-close-btn icon-remove' %>
      <div class="bg-red alert-icon">
        <i class="glyph-icon icon-times"></i>
      </div>
      <div class="alert-content">
        <h4 class="alert-title">Oops! The following errors occured:</h4>
        <ul>
          <% @institution.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_1, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :address_1, class: 'form-control', placeholder: 'Enter address 1' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_2, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :address_2, class: 'form-control', placeholder: 'Enter address 2' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :state, class: 'form-control', placeholder: 'Enter state' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :zip, class: 'form-control', placeholder: 'Enter zip' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= country_select 'institution', 'country', {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-3">
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
