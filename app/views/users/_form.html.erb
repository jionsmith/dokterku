<%= form_for @user, html: { class: 'form-horizontal bordered-row' } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-close alert-danger">
      <%= link_to '', '#', title: 'Close', class: 'glyph-icon alert-close-btn icon-remove' %>
      <div class="bg-red alert-icon">
        <i class="glyph-icon icon-times"></i>
      </div>
      <div class="alert-content">
        <h4 class="alert-title">Oops! The following errors occured:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :email, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_name, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter first name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter last name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :middle_name, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :middle_name, class: 'form-control', placeholder: 'Enter middle name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :salutation, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.select :salutation, ['Mr.', 'Mrs.', 'Ms.', 'Dr.'], { include_blank: 'Salutation' }, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.select :gender, ['Male', 'Female'], { include_blank: 'Gender' }, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :date_of_birth, class: 'form-control', placeholder: 'Enter date of birth' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_1, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :address_1, class: 'form-control', placeholder: 'Enter address 1' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address_2, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :address_2, class: 'form-control', placeholder: 'Enter address 2' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :state, class: 'form-control', placeholder: 'Enter state' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :zip, class: 'form-control', placeholder: 'Enter zip' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'col-sm-3 control-label' %>
    <div class="col-sm-6">
      <%= country_select 'user', 'country', {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-3">
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
