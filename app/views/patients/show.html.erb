<div class="row">
  <div class="col-xs-12">
    <div class="content-box">
      <h3 class="content-box-header bg-primary">Patient Details</h3>
      <div class="content-box-wrapper">
        <div class="row">
          <div class="col-xs-12 col-md-6">
            <h2><%= @patient.full_name %></h2>
            <br>
            <div class="row">
              <div class="col-xs-1">
                <h4 class="glyphicon glyphicon-inbox"></h4>
              </div>
              <div class="col-xs-10">
                <h4><%= @patient.place_of_birth %></h4>
                <h4><%= @patient.kelurahan %></h4>
                <h4><%= @patient.kecamatan %></h4>
                <h4><%= @patient.rt_rw %></h4>
                <h4><%= @patient.provinsi %></h4>
                <h4><%= @patient.last_education %></h4>
                <h4><%= @patient.religion %></h4>
                <h4><%= @patient.nationality %></h4>
                <h4><%= @patient.blood_type %></h4>
                <h4><%= @patient.marital_status %></h4>
                <h4><%= @patient.id_type %></h4>
                <h4><%= @patient.id_number %></h4>
                <h4><%= @patient.phone_number %></h4>
                <h4><%= @patient.mobile_number %></h4>

                <h3>Employment information</h3>
                <h4><%= @patient.patient_occupation %></h4>
                <h4><%= @patient.name_of_company %></h4>
                <h4><%= @patient.company_address %></h4>
                <h4><%= @patient.company_phone %></h4>

                <h3>Family information</h3>
                <h4><%= @patient.father_name %></h4>
                <h4><%= @patient.father_id_number %></h4>
                <h4><%= @patient.father_address %></h4>
                <h4><%= @patient.father_phone_number %></h4>
                <h4><%= @patient.father_mobile_number %></h4>
                <h4><%= @patient.father_email %></h4>

                <h4><%= @patient.mother_name %></h4>
                <h4><%= @patient.mother_id_number %></h4>
                <h4><%= @patient.mother_address %></h4>
                <h4><%= @patient.mother_phone_number %></h4>
                <h4><%= @patient.mother_mobile_number %></h4>
                <h4><%= @patient.mother_email %></h4>

                <h4><%= @patient.spouse_name %></h4>
                <h4><%= @patient.spouse_id_number %></h4>
                <h4><%= @patient.spouse_address %></h4>
                <h4><%= @patient.spouse_phone_number %></h4>
                <h4><%= @patient.spouse_mobile_number %></h4>
                <h4><%= @patient.spouse_email %></h4>

                <h3>Emergency contact</h3>
                <h4><%= @patient.emergency_contact_name %></h4>
                <h4><%= @patient.relationship_to_patient %></h4>
                <h4><%= @patient.emergency_contact_address %></h4>
                <h4><%= @patient.emergency_contact_phone_number %></h4>
                <h4><%= @patient.emergency_contact_mobile_number %></h4>
                <h4><%= @patient.emergency_contact_email %></h4>

                <h3>Payment</h3>
                <h4><%= @patient.method_of_payment %></h4>
                <h4><%= @patient.credit_card_number %></h4>
                <h4><%= @patient.bpjs_number %></h4>
                <h4><%= @patient.insurance_company %></h4>
                <h4><%= @patient.insurance_id_number %></h4>
                <h4><%= @patient.insurance_policy_number %></h4>
                <br>
              </div>
              <div class="col-xs-5">
                <%= gravatar_image_tag @patient.email, class: 'img-responsive img-rounded' %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 table-responsive">
            <% if @patient.notes.any? %>
              <table class="table table-stripped" id="hospital_table">
                <thead>
                  <tr>
                    <th>MR Number</th>
                    <th>Full Name</th>
                    <th>SSN</th>
                    <th>ID Number</th>
                    <th>Actions</td>
                  </tr>
                </thead>
                <tbody>
                  <% @patient.notes.each do |note| %>
                    <tr>
                      <td><%= note.mr_number %></td>
                      <td><%= note.first_name %> <%= note.middle_name %> <%= note.last_name %></td>
                      <td><%= note.ssn %></td>
                      <td><%= note.id_number %></td>
                      <td>
                        <%= link_to 'Details', patient_note_path(@patient, note), class: 'btn btn-primary' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <div class="alert alert-info">You don't have any notes for this patient right now.</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
