<% content_for :title do %>
  <title>Edit Profile | Dokterku</title>
<% end %>

<style>
  html,body {
    height: 100%;
    background: #fff;
    overflow: hidden;
  }
</style>
<script>
  wow = new WOW({
      animateClass: 'animated',
      offset: 100
  });
  wow.init();
</script>

<img src="<%= asset_path('blurred-bg-3.jpg') %>" class="login-img wow fadeIn" alt="">

<div class="center-vertical">
    <div class="center-content row">

        <div class="col-md-3 center-margin">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <div class="content-box wow bounceInDown modal-content">
                    <h3 class="content-box-header content-box-header-alt bg-default">
                        <span class="icon-separator">
                            <i class="glyph-icon icon-cog"></i>
                        </span>
                        <span class="header-wrapper">
                            Users Area
                            <small>Edit your account.</small>
                        </span>
                    </h3>
                    <div class="content-box-wrapper">
                      <%= devise_error_messages! %>
                      <div class="form-group">
                          <div class="input-group">
                              <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter first name', autofocus: true %>
                              <span class="input-group-addon bg-blue">
                                  <i class="glyph-icon icon-sort-alpha-asc"></i>
                              </span>
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="input-group">
                              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter last name' %>
                              <span class="input-group-addon bg-blue">
                                  <i class="glyph-icon icon-sort-alpha-desc"></i>
                              </span>
                          </div>
                      </div>
                        <div class="form-group">
                            <div class="input-group">
                                <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
                                <span class="input-group-addon bg-blue">
                                    <i class="glyph-icon icon-envelope-o"></i>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <%= f.password_field :password, class: 'form-control', placeholder: 'New password', autocomplete: 'off' %>
                                <span class="input-group-addon bg-blue">
                                    <i class="glyph-icon icon-unlock-alt"></i>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Retype new password', autocomplete: 'off' %>
                                <span class="input-group-addon bg-blue">
                                    <i class="glyph-icon icon-unlock-alt"></i>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current password', autocomplete: 'off' %>
                                <span class="input-group-addon bg-blue">
                                    <i class="glyph-icon icon-lock"></i>
                                </span>
                            </div>
                        </div>
                        <%= f.submit 'Update Info', class: 'btn btn-success btn-block' %>
                        <br>
                        <p class="text-center"><%= link_to 'Delete my account!', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'text-danger' %></p>
                    </div>
                </div>
            <% end %>
        </div>

    </div>
</div>
